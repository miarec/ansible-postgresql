---
exclude_paths:
  - .venv/

skip_list:
  - fqcn
  - yaml[line-length]
  - yaml[empty-lines]
  - yaml[trailing-spaces]
  - yaml[truthy]
  - yaml[colons]
  - yaml[commas]
  - yaml[comments]
  - yaml[indentation]
  - jinja[spacing]
  - name[missing]
  - name[casing]
  - risky-file-permissions
  - key-order[task]
  - no-changed-when
  - ignore-errors
