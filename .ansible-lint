---
exclude_paths:
  - molecule/
  - tests/
  - .venv/

skip_list:
  - fqcn
  - yaml[line-length]
  - yaml[empty-lines]
  - yaml[trailing-spaces]
  - yaml[truthy]
  - yaml[colons]
  - yaml[commas]
  - yaml[comments]
  - yaml[new-line-at-end-of-file]
  - yaml[indentation]
  - jinja[spacing]
  - name[template]
  - name[missing]
  - name[casing]
  - command-instead-of-shell
  - risky-file-permissions
  - key-order[task]
  - no-changed-when
  - meta-no-tags
  - ignore-errors
